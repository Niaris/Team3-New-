<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    
    <TextView
        android:id="@+id/UserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:text=""
        android:visibility="gone"  />

   

    <Button
        android:id="@+id/btnEditDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/UserId"
        android:layout_centerHorizontal="true"
        android:text="@string/button_edit_details" 
        />

        <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserId"
        android:layout_marginTop="60dp" />

                
    <TextView
        android:id="@+id/favouritesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView1"
        android:layout_marginTop="39dp"
        android:text="My favourite locations" />
            
        <ListView
        android:id="@+id/listViewLocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favouritesTxt"
        android:layout_marginTop="60dp" />
        
</RelativeLayout>